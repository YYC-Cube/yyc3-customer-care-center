# YYCÂ³ Customer Care Center - Production Environment
# IMPORTANT: Never commit this file to version control!
# Copy this file from .env.example and update with production values

NODE_ENV=production
PORT=3200
APP_NAME=yyc3-app-customer-care-center
APP_VERSION=1.0.0

# Database Configuration (Production)
DATABASE_URL=postgresql://username:secure_password@production-db-host:5432/yyc3_prod
POSTGRES_USER=postgres_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_DB=yyc3_prod

# Redis Configuration (Production)
REDIS_URL=redis://:secure_password@production-redis-host:6379
REDIS_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# API Configuration
NEXT_PUBLIC_API_URL=https://your-production-domain.com/api
API_SECRET_KEY=CHANGE_THIS_SECURE_API_KEY
API_TIMEOUT=30000

# Authentication & Security (Production)
JWT_SECRET=CHANGE_THIS_SECURE_JWT_SECRET
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=CHANGE_THIS_SECURE_REFRESH_SECRET
JWT_REFRESH_EXPIRES_IN=30d

# Sentry Configuration (Production)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_REPLAY_SESSION_SAMPLE_RATE=0.01
SENTRY_REPLAY_ON_ERROR_SAMPLE_RATE=0.1

# Email Configuration (Production)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=noreply@yyc3.com
SMTP_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
SMTP_FROM=noreply@yyc3.com

# Storage Configuration (Production)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=yyc3-customer-care-center-prod

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting (Production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (Production)
CORS_ORIGIN=https://your-production-domain.com
CORS_CREDENTIALS=true

# Analytics (Production)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXX

# Feature Flags (Production)
ENABLE_AI_FEATURES=true
ENABLE_REALTIME_CHAT=true
ENABLE_VIDEO_CALLS=true
ENABLE_ANALYTICS=true

# Third-party Services (Production)
OPENAI_API_KEY=your_production_openai_key
ANTHROPIC_API_KEY=your_production_anthropic_key
STRIPE_PUBLIC_KEY=pk_live_xxx
STRIPE_SECRET_KEY=sk_live_xxx

# Monitoring & Logging (Production)
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# Cache Configuration (Production)
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Session Configuration (Production)
SESSION_SECRET=CHANGE_THIS_SECURE_SESSION_SECRET
SESSION_MAX_AGE=86400000

# Security Headers (Production)
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_FRAME_OPTIONS=DENY
SECURITY_XSS_PROTECTION=1; mode=block

# Localization
DEFAULT_LOCALE=zh-CN
SUPPORTED_LOCALES=zh-CN,en-US,ja-JP,ko-KR

# Timezone
TZ=Asia/Shanghai

# Build Configuration
ANALYZE=false
BUILD_TIME=
